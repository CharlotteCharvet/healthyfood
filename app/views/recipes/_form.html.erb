<%= simple_form_for (@recipe, :html => { :multipart => true }) do |f| %>
<%= f.file_field :image %>
<%= f.input :title %>
<%= f.input :description %>
<%= f.input :cook_time %>
<%= f.input :nutrition %>
<%= f.input :recipe %>
<%= f.input :direction %>
<%= f.input :tag %>
<%= f.button :submit %>
<% end %>